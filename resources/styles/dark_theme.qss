/* CineAIStudio - Modern Dark Theme */

/* ==================== 全局样式 ==================== */
QWidget {
    background-color: #121212;
    color: #e0e0e0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 14px;
    line-height: 1.6;
    border-radius: 8px;
}

QMainWindow {
    background-color: #0a0a0a;
}

/* ==================== 左侧导航面板 ==================== */
QWidget[objectName="left_panel"] {
    background: linear-gradient(180deg, #1e1e1e 0%, #121212 100%);
    border-right: 1px solid #2a2a2a;
    min-width: 220px;
    max-width: 280px;
}

/* 应用标题 */
QLabel[objectName="app_title"] {
    color: #40a9ff;
    font-size: 20px;
    font-weight: 700;
    padding: 20px 20px 16px;
    background-color: transparent;
    letter-spacing: 0.5px;
}

/* 导航按钮 */
QPushButton[objectName="nav_button"] {
    background: transparent;
    border: none;
    border-radius: 8px;
    color: #b0b0b0;
    padding: 14px 20px;
    text-align: left;
    font-weight: 500;
    min-height: 44px;
    margin: 4px 12px;
}

QPushButton[objectName="nav_button"]:hover {
    background: linear-gradient(135deg, rgba(64, 169, 255, 0.1) 0%, rgba(64, 169, 255, 0.05) 100%);
    color: #40a9ff;
}

QPushButton[objectName="nav_button"]:checked {
    background: linear-gradient(135deg, #1a237e 0%, #1565c0 100%);
    color: #ffffff;
    font-weight: 600;
    border-left: 4px solid #40a9ff;
}

/* ==================== 按钮样式 ==================== */
/* 主要按钮 */
QPushButton[objectName="primary_button"] {
    background: linear-gradient(135deg, #40a9ff 0%, #1890ff 100%);
    border: none;
    border-radius: 8px;
    color: #ffffff;
    padding: 10px 20px;
    font-weight: 500;
    min-height: 36px;
}

QPushButton[objectName="primary_button"]:hover {
    background: linear-gradient(135deg, #69c0ff 0%, #40a9ff 100%);
}

QPushButton[objectName="primary_button"]:pressed {
    background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
}

QPushButton[objectName="primary_button"]:disabled {
    background: linear-gradient(135deg, #303030 0%, #202020 100%);
    color: #666666;
    opacity: 0.6;
}

/* 默认按钮 */
QPushButton {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    color: #e0e0e0;
    padding: 10px 20px;
    font-weight: 500;
    min-height: 36px;
}

QPushButton:hover {
    background: linear-gradient(135deg, #2a2a2a 0%, #1e1e1e 100%);
    border-color: #40a9ff;
    color: #40a9ff;
}

QPushButton:pressed {
    background: linear-gradient(135deg, #121212 0%, #0a0a0a 100%);
}

QPushButton:disabled {
    background: linear-gradient(135deg, #202020 0%, #151515 100%);
    color: #555555;
    border-color: #303030;
    opacity: 0.6;
}

/* 危险按钮 */
QPushButton[objectName="danger_button"] {
    background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
    border: none;
    color: #ffffff;
}

QPushButton[objectName="danger_button"]:hover {
    background: linear-gradient(135deg, #ff7875 0%, #ff4d4f 100%);
}

QPushButton[objectName="danger_button"]:pressed {
    background: linear-gradient(135deg, #cf1322 0%, #a8071a 100%);
}

/* ==================== 输入控件 ==================== */
QLineEdit, QTextEdit, QPlainTextEdit {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    padding: 10px 14px;
    color: #e0e0e0;
    min-height: 36px;
}

/* 添加聚焦效果 */
QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #40a9ff;
    outline: none;
}

/* 添加占位符样式 */
QLineEdit::placeholder, QTextEdit::placeholder, QPlainTextEdit::placeholder {
    color: #666666;
    font-style: italic;
}

/* 优化输入框聚焦效果 */
QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #40a9ff;
    outline: none;
}

/* 优化复选框和单选按钮样式 */
QCheckBox, QRadioButton {
    spacing: 8px;
    min-height: 24px;
    font-weight: 500;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #333333;
    border-radius: 4px;
    background: #1e1e1e;
}

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border-color: #40a9ff;
}

QCheckBox::indicator:checked {
    background: #40a9ff;
    border-color: #40a9ff;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTMgNkw2LjUgOS41TDExIDQiIHN0cm9rZT0iI2ZmZmZmZiIgc3Ryb2tlLXdpZHRoPSIxLjUiIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLWxpbmVqb2luPSJyb3VuZCIvPgo8L3N2Zz4K);
}

QRadioButton::indicator {
    border-radius: 9px;
}

QRadioButton::indicator:checked {
    background: #40a9ff;
    border-color: #40a9ff;
}

/* 优化滑块样式 */
QSlider::groove:horizontal {
    border: none;
    background: #1e1e1e;
    height: 6px;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background: #40a9ff;
    border: none;
    width: 16px;
    height: 16px;
    border-radius: 8px;
    margin: -5px 0;
}

QSlider::handle:horizontal:hover {
    background: #69c0ff;
}

QSlider::sub-page:horizontal {
    background: #40a9ff;
    border-radius: 3px;
}

/* 优化进度条样式 */
QProgressBar {
    background: #1e1e1e;
    border: 1px solid #333333;
    border-radius: 8px;
    text-align: center;
    font-weight: 500;
    height: 24px;
}

QProgressBar::chunk {
    background: linear-gradient(90deg, #40a9ff 0%, #1890ff 100%);
    border-radius: 7px;
    margin: 1px;
}

/* 优化标签页样式 */
QTabWidget::pane {
    background: #121212;
    border: 1px solid #333333;
    border-radius: 8px;
}

QTabBar::tab {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-bottom: none;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    color: #b0b0b0;
    padding: 10px 20px;
    margin-right: 2px;
    font-weight: 500;
    min-width: 100px;
    min-height: 36px;
}

QTabBar::tab:hover {
    background: linear-gradient(135deg, #2a2a2a 0%, #1e1e1e 100%);
    color: #40a9ff;
}

QTabBar::tab:selected {
    background: #121212;
    border-color: #40a9ff;
    color: #40a9ff;
    font-weight: 600;
}

/* 优化分组框样式 */
QGroupBox {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    margin-top: 8px;
    font-weight: 600;
    color: #e0e0e0;
}

QGroupBox::title {
    color: #40a9ff;
    padding: 0 8px;
    subcontrol-origin: margin;
    left: 8px;
    top: -10px;
    background: #121212;
    border-radius: 4px;
    padding: 2px 8px;
}

/* 优化分割器样式 */
QSplitter {
    background: #121212;
}

QSplitter::handle {
    background: #333333;
    width: 4px;
    height: 4px;
}

QSplitter::handle:hover {
    background: #40a9ff;
}

/* 优化滚动条样式 */
QScrollBar:vertical {
    background: #121212;
    width: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: #333333;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: #40a9ff;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: none;
    height: 0;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background: #121212;
    height: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: #333333;
    border-radius: 6px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background: #40a9ff;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    background: none;
    width: 0;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* 优化菜单样式 */
QMenu {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    padding: 6px;
    color: #e0e0e0;
}

QMenu::item {
    background: transparent;
    padding: 8px 16px;
    border-radius: 4px;
    margin: 2px;
}

QMenu::item:hover {
    background: #1a237e;
    color: #40a9ff;
}

QMenu::item:selected {
    background: #1565c0;
    color: #ffffff;
}

/* 优化工具提示样式 */
QToolTip {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    padding: 10px 14px;
    color: #e0e0e0;
    font-weight: 500;
}

/* 优化状态栏样式 */
QStatusBar {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border-top: 1px solid #333333;
    color: #b0b0b0;
    padding: 6px 12px;
    font-size: 12px;
}

/* 优化主窗口样式 */
QMainWindow {
    background: #0a0a0a;
    border-radius: 8px;
}

/* 优化对话框样式 */
QDialog {
    background: #121212;
    border: 1px solid #333333;
    border-radius: 12px;
    color: #e0e0e0;
}

QDialog QLabel {
    color: #e0e0e0;
}

QDialogButtonBox {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border-top: 1px solid #333333;
    padding: 12px;
    border-bottom-left-radius: 12px;
    border-bottom-right-radius: 12px;
}

/* 优化项目卡片样式 */
QFrame#projectCard {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 12px;
}

QFrame#projectCard:hover {
    border-color: #40a9ff;
}

/* 优化模板卡片样式 */
QFrame#templateCard {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 2px solid #333333;
    border-radius: 12px;
}

QFrame#templateCard:hover {
    border-color: #40a9ff;
}

QFrame#templateCard[selected=true] {
    border-color: #52c41a;
    background: linear-gradient(135deg, rgba(82, 196, 26, 0.1) 0%, #121212 100%);
}

/* 优化按钮组样式 */
QButtonGroup {
    spacing: 8px;
}

/* 优化表格样式 */
QTableWidget {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    gridline-color: #333333;
}

QTableWidget::item {
    padding: 8px 12px;
    color: #e0e0e0;
    border-bottom: 1px solid #333333;
}

QTableWidget::item:selected {
    background: #1a237e;
    color: #40a9ff;
}

QTableWidget::header {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    padding: 10px;
    font-weight: 600;
    color: #40a9ff;
}

/* 优化列表控件样式 */
QListWidget, QListWidget::item {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    color: #e0e0e0;
}

QListWidget::item {
    padding: 10px 14px;
    border-bottom: 1px solid #333333;
}

QListWidget::item:hover {
    background: #1a237e;
    color: #40a9ff;
}

QListWidget::item:selected {
    background: #1565c0;
    color: #ffffff;
}

/* 优化文本编辑控件样式 */
QTextEdit, QPlainTextEdit {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    color: #e0e0e0;
    padding: 10px 14px;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #40a9ff;
    outline: none;
}

/* 优化字体选择器样式 */
QFontComboBox {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    color: #e0e0e0;
    padding: 10px 14px;
}

QFontComboBox:hover {
    border-color: #40a9ff;
}

QFontComboBox:focus {
    border-color: #40a9ff;
    outline: none;
}

/* 优化日期时间选择器样式 */
QDateTimeEdit, QDateEdit, QTimeEdit {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    color: #e0e0e0;
    padding: 10px 14px;
}

QDateTimeEdit:hover, QDateEdit:hover, QTimeEdit:hover {
    border-color: #40a9ff;
}

QDateTimeEdit:focus, QDateEdit:focus, QTimeEdit:focus {
    border-color: #40a9ff;
    outline: none;
}

/* 优化滑块控件样式 */
QSlider {
    background: transparent;
}

QSlider::groove {
    background: #1e1e1e;
    border-radius: 3px;
}

QSlider::handle {
    background: #40a9ff;
    border: none;
    border-radius: 50%;
}

QSlider::handle:hover {
    background: #69c0ff;
}

/* 优化旋转框样式 */
QSpinBox, QDoubleSpinBox {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    color: #e0e0e0;
    padding: 10px 14px;
}

QSpinBox:hover, QDoubleSpinBox:hover {
    border-color: #40a9ff;
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border-color: #40a9ff;
    outline: none;
}

QSpinBox::up-button, QDoubleSpinBox::up-button,
QSpinBox::down-button, QDoubleSpinBox::down-button {
    background: transparent;
    border: none;
}

QSpinBox::up-arrow, QDoubleSpinBox::up-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTMgOC41TDYgNS41TDkgOC41IiBzdHJva2U9IiM0MGE5ZmYiIHN0cm9rZS13aWR0aD0iMS41IiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS1saW5lam9pbj0icm91bmQiLz4KPC9zdmc+);
    width: 12px;
    height: 12px;
}

QSpinBox::down-arrow, QDoubleSpinBox::down-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTMgNC41TDYgNy41TDkgNC41IiBzdHJva2U9IiM0MGE5ZmYiIHN0cm9rZS13aWR0aD0iMS41IiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS1saW5lam9pbj0icm91bmQiLz4KPC9zdmc+);
    width: 12px;
    height: 12px;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background: linear-gradient(135deg, #202020 0%, #151515 100%);
    color: #666666;
    opacity: 0.6;
}

/* ==================== 下拉框 ==================== */
QComboBox {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    padding: 10px 14px;
    color: #e0e0e0;
    min-height: 36px;
}

QComboBox:hover {
    border-color: #40a9ff;
}

QComboBox:focus {
    border-color: #40a9ff;
    outline: none;
}

QComboBox::drop-down {
    border: none;
    width: 30px;
    background: transparent;
}

QComboBox::down-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTMgNC41TDYgNy41TDkgNC41IiBzdHJva2U9IiM0MGE5ZmYiIHN0cm9rZS13aWR0aD0iMS41IiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS1saW5lam9pbj0icm91bmQiLz4KPC9zdmc+);
    width: 12px;
    height: 12px;
    margin-right: 8px;
}

QComboBox QAbstractItemView {
    background: linear-gradient(135deg, #1e1e1e 0%, #121212 100%);
    border: 1px solid #333333;
    border-radius: 8px;
    selection-background-color: #1a237e;
    selection-color: #40a9ff;
    padding: 6px;
}

QComboBox QAbstractItemView::item {
    padding: 10px 14px;
    border-radius: 6px;
    margin: 2px 0;
}

QComboBox QAbstractItemView::item:hover {
    background-color: rgba(64, 169, 255, 0.1);
    color: #40a9ff;
}

/* ==================== 选项卡 ==================== */
QTabWidget::pane {
    border: 1px solid #434343;
    background-color: #1f1f1f;
    border-radius: 6px;
}

QTabBar::tab {
    background-color: #262626;
    border: 1px solid #434343;
    border-bottom: none;
    border-radius: 6px 6px 0 0;
    padding: 8px 16px;
    margin-right: 2px;
    color: #a6a6a6;
}

QTabBar::tab:selected {
    background-color: #1f1f1f;
    color: #177ddc;
    border-color: #177ddc;
    border-bottom: 2px solid #177ddc;
}

QTabBar::tab:hover:!selected {
    background-color: #2a2a2a;
    color: #ffffff;
}

/* ==================== 列表和树形控件 ==================== */
QListWidget, QTreeWidget {
    background-color: #1f1f1f;
    border: 1px solid #434343;
    border-radius: 6px;
    alternate-background-color: #262626;
}

QListWidget::item, QTreeWidget::item {
    padding: 8px;
    border-bottom: 1px solid #434343;
}

QListWidget::item:selected, QTreeWidget::item:selected {
    background-color: #111b26;
    color: #177ddc;
}

QListWidget::item:hover, QTreeWidget::item:hover {
    background-color: #2a2a2a;
}

/* ==================== 分组框 ==================== */
QGroupBox {
    font-weight: 600;
    border: 1px solid #434343;
    border-radius: 6px;
    margin-top: 8px;
    padding-top: 8px;
    background-color: #1f1f1f;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 8px;
    padding: 0 8px 0 8px;
    color: #ffffff;
}

/* ==================== 滚动条 ==================== */
QScrollBar:vertical {
    background-color: #262626;
    width: 8px;
    border-radius: 4px;
}

QScrollBar::handle:vertical {
    background-color: #434343;
    border-radius: 4px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #595959;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #262626;
    width: 8px;
    border-radius: 4px;
}

QScrollBar::handle:horizontal {
    background-color: #434343;
    border-radius: 4px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #595959;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* ==================== 状态栏 ==================== */
QStatusBar {
    background-color: #262626;
    border-top: 1px solid #434343;
    color: #a6a6a6;
}

/* ==================== 工具提示 ==================== */
QToolTip {
    background-color: rgba(255, 255, 255, 0.9);
    color: #262626;
    border: none;
    border-radius: 4px;
    padding: 8px;
    font-size: 12px;
}

/* ==================== 进度条 ==================== */
QProgressBar {
    background-color: #262626;
    border: 1px solid #434343;
    border-radius: 12px;
    text-align: center;
    color: #ffffff;
    height: 14px;
    padding: 2px;
}

QProgressBar::chunk {
    background: linear-gradient(90deg, #40a9ff 0%, #1890ff 100%);
    border-radius: 10px;
}

/* ==================== 复选框和单选框 ==================== */
QCheckBox, QRadioButton {
    color: #ffffff;
    spacing: 8px;
    font-size: 14px;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #434343;
    background-color: #1f1f1f;
}

QCheckBox::indicator {
    border-radius: 4px;
}

QRadioButton::indicator {
    border-radius: 12px;
}

QCheckBox::indicator:unchecked:hover, QRadioButton::indicator:unchecked:hover {
    border-color: #40a9ff;
    background-color: rgba(64, 169, 255, 0.1);
}

QCheckBox::indicator:checked {
    border: 2px solid #177ddc;
    background-color: #177ddc;
    border-radius: 4px;
}

QRadioButton::indicator:checked {
    border: 2px solid #177ddc;
    background-color: #177ddc;
    border-radius: 12px;
}

/* 复选框勾选标记 */
QCheckBox::indicator:checked::after {
    content: '';
    position: absolute;
    top: 3px;
    left: 7px;
    width: 4px;
    height: 8px;
    border: 2px solid white;
    border-top: none;
    border-left: none;
}

/* ==================== 分隔器 ==================== */
QSplitter::handle {
    background-color: #434343;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:pressed {
    background-color: #177ddc;
}
