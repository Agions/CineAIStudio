/* VideoEpicCreator - Dark Theme (Ant Design Inspired) */

/* ==================== 全局样式 ==================== */
QWidget {
    background-color: #1f1f1f;
    color: #ffffff;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 14px;
    line-height: 1.5715;
}

QMainWindow {
    background-color: #141414;
}

/* ==================== 左侧导航面板 ==================== */
QWidget[objectName="left_panel"] {
    background-color: #1f1f1f;
    border-right: 1px solid #434343;
    min-width: 200px;
    max-width: 250px;
}

/* 应用标题 */
QLabel[objectName="app_title"] {
    color: #177ddc;
    font-size: 18px;
    font-weight: 600;
    padding: 16px;
    background-color: transparent;
}

/* 导航按钮 */
QPushButton[objectName="nav_button"] {
    background-color: transparent;
    border: none;
    border-radius: 6px;
    color: #ffffff;
    padding: 12px 16px;
    text-align: left;
    font-weight: 400;
    min-height: 40px;
    margin: 2px 8px;
}

QPushButton[objectName="nav_button"]:hover {
    background-color: #262626;
    color: #177ddc;
}

QPushButton[objectName="nav_button"]:checked {
    background-color: #111b26;
    color: #177ddc;
    font-weight: 600;
    border-left: 3px solid #177ddc;
}

/* ==================== 按钮样式 ==================== */
/* 主要按钮 */
QPushButton[objectName="primary_button"] {
    background-color: #177ddc;
    border: 1px solid #177ddc;
    border-radius: 6px;
    color: #ffffff;
    padding: 8px 16px;
    font-weight: 400;
    min-height: 32px;
}

QPushButton[objectName="primary_button"]:hover {
    background-color: #3c9ae8;
    border-color: #3c9ae8;
}

QPushButton[objectName="primary_button"]:pressed {
    background-color: #0958d9;
    border-color: #0958d9;
}

QPushButton[objectName="primary_button"]:disabled {
    background-color: #262626;
    border-color: #434343;
    color: #595959;
}

/* 默认按钮 */
QPushButton {
    background-color: #1f1f1f;
    border: 1px solid #434343;
    border-radius: 6px;
    color: #ffffff;
    padding: 8px 16px;
    font-weight: 400;
    min-height: 32px;
}

QPushButton:hover {
    border-color: #3c9ae8;
    color: #3c9ae8;
}

QPushButton:pressed {
    border-color: #0958d9;
    color: #0958d9;
}

QPushButton:disabled {
    background-color: #262626;
    border-color: #434343;
    color: #595959;
}

/* 危险按钮 */
QPushButton[objectName="danger_button"] {
    background-color: #dc4446;
    border: 1px solid #dc4446;
    color: #ffffff;
}

QPushButton[objectName="danger_button"]:hover {
    background-color: #e86e70;
    border-color: #e86e70;
}

/* ==================== 输入控件 ==================== */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #1f1f1f;
    border: 1px solid #434343;
    border-radius: 6px;
    padding: 8px 12px;
    color: #ffffff;
    min-height: 32px;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #3c9ae8;
    outline: none;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: #262626;
    color: #595959;
}

/* ==================== 下拉框 ==================== */
QComboBox {
    background-color: #1f1f1f;
    border: 1px solid #434343;
    border-radius: 6px;
    padding: 8px 12px;
    color: #ffffff;
    min-height: 32px;
}

QComboBox:hover {
    border-color: #3c9ae8;
}

QComboBox:focus {
    border-color: #3c9ae8;
    outline: none;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

