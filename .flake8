[flake8]
max-line-length = 88
max-complexity = 10
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv,
    .tox,
    .eggs,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .mypy_cache,
    .DS_Store,
    *.pyc,
    *.pyo,
    *.pyd,
    .Python,
    env,
    pip-log.txt,
    pip-delete-this-directory.txt,
    .vscode,
    .idea,
    *.swp,
    *.swo,
    *~

# 忽略的错误类型
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused
    F841,  # local variable is assigned to but never used

# 按文件忽略的规则
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841
    */migrations/*:F401

# 文档字符串要求
docstring-convention = google

# 导入顺序检查
import-order-style = google

# 避免使用特定函数
builtins = _
additional-builtins = _