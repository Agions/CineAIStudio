# AI服务API密钥配置
OPENAI_API_KEY=your_openai_api_key_here
QIANWEN_API_KEY=your_qianwen_api_key_here

# 应用基本设置
APP_NAME=VideoEpicCreator
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# 性能设置
MAX_MEMORY_USAGE=2048  # MB
CACHE_SIZE=100  # 预览帧数
MAX_CONCURRENT_TASKS=5

# 视频处理设置
FFMPEG_PATH=ffmpeg
DEFAULT_VIDEO_QUALITY=high
DEFAULT_RESOLUTION=1920x1080
DEFAULT_FPS=30

# AI模型设置
DEFAULT_AI_MODEL=openai
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=60

# 语音合成设置
TTS_ENGINE=edge-tts
DEFAULT_VOICE=zh-CN-XiaoxiaoNeural
TTS_SPEED=1.0
TTS_PITCH=1.0

# 文件路径设置
DATA_DIR=./data
CACHE_DIR=./cache
LOG_DIR=./logs
EXPORT_DIR=./exports

# 网络设置
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# 开发设置
DEV_MODE=false
TEST_MODE=false
PROFILE_PERFORMANCE=false